{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "verbatimModuleSyntax": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmit": true,
    "composite": false,
  },
  "include": [
    "./packages/"
  ],
  "exclude": [
    "./**/dist/*"
  ]
}
