{
  "root": true,
  "ignorePatterns": [
    "dist"
  ],
  "overrides": [
    {
      "files": [
        "**/*.js"
      ],
      "extends": "sukka/node",
      "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 2023
      },
      "rules": {
        "@fluffyfox/array/prefer-from": "off"
      }
    },
    {
      "files": [
        "packages/**/*.ts",
        "packages/**/*.tsx"
      ],
      "extends": "sukka/typescript",
      "parserOptions": {
        "ecmaVersion": "latest",
        "project": "./tsconfig.json",
        "warnOnUnsupportedTypeScriptVersion": false,
        "allowAutomaticSingleRunInference": true
      }
    }
  ]
}
